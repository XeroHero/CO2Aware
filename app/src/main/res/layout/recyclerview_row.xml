        <TextView
            android:id="@+id/bike_station_address"
            android:text="Bike Station Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/parking_available"
            android:text="Parking Available"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bike_station_address"
            android:layout_toEndOf="@id/bikes_available"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bikes_available"
            android:text="Bikes Available"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bike_station_address"
            android:layout_marginTop="0dp"
            android:width="20dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/distance"
            android:text="Distance"


            android:layout_toEndOf="@id/bike_station_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>